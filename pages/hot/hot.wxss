.banner {
  position: relative;
}

.banner .banner-images {
  position: relative;
  z-index: 1;
}

.banner .banner-images image {
  filter: brightness(90%);
  -webkit-filter: brightness(90%);
  -moz-filter: brightness(90%);
  -o-filter: brightness(90%);
  -ms-filter: brightness(90%);
}

.weather {
  position: absolute;
  z-index: 999;
  display: flex;
  flex-direction: column;
  padding: 8px;
  bottom: 0;
}

.weather image {
  width: 42px;
  height: 30px;
  border-radius: 5px;
}

.weather text {
  font-size: 12px;
  color: #ffffff;
  text-shadow: 0 0 1px rgba(191, 191, 191, 0.36);
}
