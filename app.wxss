/**app.wxss**/
.content {
  background-color: #efefef;
  width: 100%;
  height: 100%;
  min-width: 100%;
  min-height: 100%;
}

.content-list {
  display: flex;
  flex-direction: column;
}

.movie-scroll-container {
  overflow: scroll;
  white-space: nowrap;
  display: flex;
  background-color: #ffffff;
  color: #3b3b3b;
  padding: 8px;
  margin-top: 8px;
}

.movie-scroll-container-hover {
  background-color: #f7f7f7;
}

.placeholder {
  width: 8px;
}

.movie {
  display: flex;
  flex-direction: row;
}

.rating {
  border-radius: 2px;
  box-shadow: 0 0 10px rgba(177, 177, 177, 0.56);
  font-size: 14px;
  font-weight: bold;
  padding: 4px;
  margin-left: 8px;
  color: #ffffff;
  text-align: center;
  background-color: #06c012;
}

.cover image {
  width: 90px;
  height: 128px;
  border-radius: 2px;
  box-shadow: 0 0 10px rgba(177, 177, 177, 0.56);
  margin-bottom: -5px;
}

.movie-info {
  padding-left: 8px;
  color: rgb(96, 96, 96);
  font-size: 14px;
  line-height: 25px;
}


